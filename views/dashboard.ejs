<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard</title>
 
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f3f4f6;
      margin: 0;
      padding: 20px;
    }
    h1{
      font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
      text-align: center;
      margin-top: 3px;
      margin-bottom: 3px;
    }
 
    h2{
      font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
      font-size:x-large;
      color: #02585e;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .actions {
      display: flex;
      gap: 12px;
    }

    .actions a {
      text-decoration: none;
    }

    .actions button {
      display: flex;
      align-items: center;
      gap: 6px;
      padding: 10px 14px;
      border: none;
      border-radius: 8px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .actions button svg {
      width: 20px;
      height: 20px;
    }

    .add-user-btn {
      background-color: #1e88e5;
    }

    .add-role-btn {
      background-color: #6a1b9a;
    }

    .logout-button {
      background-color: #e53935;
    }

    .logout-button:hover {
      background-color: #c62828;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 14px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    th {
      background-color: #1976d2;
      color: white;
    }

    td:last-child {
      display: flex;
      gap: 10px;
    }

    .btn-edit,
    .btn-delete {
      padding: 6px 12px;
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: 500;
      cursor: pointer;
    }

    .btn-edit {
      background-color: #43a047;
    }

    .btn-delete {
      background-color: #e53935;
    }




.pagination a {
  margin: 0 6px;
  padding: 8px 16px;
  background-color: #1976d2; 
  color: white;
  text-decoration: none;
  border-radius: 6px;
  font-weight: bold;
  user-select: none;
  cursor: pointer;
  display: inline-block;
  min-width: 60px;
  text-align: center;
  transition: background-color 0.3s ease, opacity 0.3s ease;
}


.pagination a:not(.disabled):hover {
  background-color: #1565c0;
}


.pagination a.disabled {
  opacity: 0.5;
  cursor: default;
  pointer-events: none; 
  background-color: #1976d2;
}


.pagination a.btn-prev {
  background-color: #1976d2;
}

.pagination a.btn-prev:not(.disabled):hover {
  background-color: #1565c0;
}

.pagination a.btn-next {
  background-color: #1e88e5;
}

.pagination a.btn-next:not(.disabled):hover {
  background-color: #1565c0;
}



    .pagination {
      margin-top: 25px;
      text-align: center;
    }

    
  </style>
</head>
<body>
  <h1>Dashboard</h1>
  <div class="header">
    <h2>Welcome, <%= user.username %>!</h2>
    <div class="actions">
      <% if (permissions.includes('add_user')) { %>
        <a href="/users/add">
          <button class="add-user-btn">
          
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <line x1="20" y1="8" x2="20" y2="14"/>
              <line x1="17" y1="11" x2="23" y2="11"/>
            </svg>
            Add User
          </button>
        </a>
      <% } %>

      <% if (permissions.includes('add_role')) { %>
        <a href="/roles/add">
          <button class="add-role-btn">
            
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M12 2l7 4v6c0 5-3 9-7 10-4-1-7-5-7-10V6l7-4z"/>
            </svg>
            Add Role
          </button>
        </a>
      <% } %>

      <form action="/logout" method="GET" style="display:inline;">
        <button type="submit" class="logout-button">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
            <path d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 002 2h3a2 2 0 002-2V7a2 2 0 00-2-2h-3a2 2 0 00-2 2v1"/>
          </svg>
          Logout
        </button>
      </form>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>S.No</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <% if (permissions.includes('edit') || permissions.includes('delete')) { %>
          <th>Actions</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user,index) => { %>
        <tr>
          <td><%=(currentPage-1)*perPage+index+1%></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role_name %></td>
          <% if (permissions.includes('edit') || permissions.includes('delete')) { %>
            <td>
              <% if (permissions.includes('edit')) { %>
                <a href="/users/edit/<%= user.id %>">
                  <button class="btn-edit">Edit</button>
                </a>
              <% } %>
              <% if (permissions.includes('delete')) { %>
                <a href="/users/delete/<%= user.id %>" onclick="return confirm('Are you sure?')">
                  <button class="btn-delete">Delete</button>
                </a>
              <% } %>
            </td>
          <% } %>
        </tr>
      <% }) %>
    </tbody>
  </table>

    
  <div class="pagination">
  <% if (currentPage > 1) { %>
    <a href="/dashboard?page=<%= currentPage - 1 %>" class="btn-prev">Prev</a>
  <% } else { %>
    <a class="btn-prev disabled" tabindex="-1" aria-disabled="true">Prev</a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="/dashboard?page=<%= currentPage + 1 %>" class="btn-next">Next</a>
  <% } else { %>
    <a class="btn-next disabled" tabindex="-1" aria-disabled="true">Next</a>
  <% } %>
</div>



</body>
</html>
